<Window x:Class="Tamagochi.StartNewGameDialogNavigation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tamagochi"
        mc:Ignorable="d"
        Title="Вибір домашнього улюбленця..." Height="400" Width="550" SnapsToDevicePixels="True" WindowStartupLocation="CenterScreen" MinWidth="550" MinHeight="400">

    <Grid Margin="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="67*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlockInvitation" Margin="20,113,18,138" TextWrapping="Wrap" Background="#FFFFC500" Height="112" FontSize="18.667" FontWeight="Bold" Foreground="#FD24A7D8" Text="Будь-ласка, виберіть собі улюбленця." TextAlignment="Center" MinWidth="112" MaxWidth="112" MinHeight="112" MaxHeight="112"/>
        <Frame x:Name="PageContainer" Source="ChoosePetPage.xaml"
               BorderBrush="Blue" BorderThickness="1" Margin="14,0,0,0" Grid.Column="1" Navigated="Frame_Navigated"/>
    </Grid>
</Window>
