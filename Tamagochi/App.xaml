<Application x:Class="Tamagochi.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Tamagochi"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ButonsOnStartGameDialogStyle">
                <Setter Property="Button.Background" Value="LightSalmon"/>
                <Setter Property="Button.FontSize" Value="18"/>
                <Setter Property="Button.FontStyle" Value="Italic"/>
                <Setter Property="Button.Foreground" Value="Crimson"/>
        </Style>
    </Application.Resources>
</Application>
